	<!--
		Note: this was one of the first classes I created. Since then, I've learned attributes are usually in lowercase and using underscores. 
		num_displayport would become number_displayport for example.
		I might rectify this in a future version.
	-->
	<classes>
		<!-- 
			Before creating the actual class, take in mind that 'model' is one of the options we'll add. Model is an existing Typology class. Simply define this new class as a value/option.
			This was originally missing from the Combodo version in their tutorial, but has been rectified after I submitted feedback.
		-->
		<class id="Model"> 
			<fields>
				<field id="type" xsi:type="AttributeEnum">
					<values>
						<value id="Monitor" _delta="define">Monitor</value> 
					</values>
				</field>
			</fields>
		</class>

		<!--
			Add a new Class Monitor
		-->
		<class id="Monitor" _delta="define">
			<parent>PhysicalDevice</parent>
			<properties>
				<category>bizmodel,searchable</category>
				<abstract>false</abstract>
				<key_type>autoincrement</key_type>
				<db_table>monitor</db_table>
				<db_key_field>id</db_key_field>
				<db_final_class_field/>
				<naming>
					<format>%1$s</format>
					<attributes>
						<attribute id="name"/>
					</attributes>
				</naming>
				<display_template/>
				<icon>images/monitor.png</icon>
				<reconciliation>
					<attributes>
						<attribute id="name"/>
						<attribute id="org_id"/>
						<attribute id="organization_name"/>
					</attributes>
				</reconciliation>
			</properties>
			<fields>
				<!-- 
					For now, this is an AttributeEnum, which means optoins are predefined. 
					It's possible to change this to the way the model attribute works, so users can add their own typology. 
				-->
				<field id="type" xsi:type="AttributeEnum">
					<values>
						<value>beamer</value>
						<value>digital_signage</value>
						<value>monitor</value>
					</values>
					<sql>type</sql>
					<default_value/>
					<is_null_allowed>true</is_null_allowed>
					<display_style>list</display_style>
				</field>
				<field id="num_vga" xsi:type="AttributeInteger"> 
					<sql>num_vga</sql>
					<default_value>0</default_value>
					<is_null_allowed>true</is_null_allowed>
					<tracking_level>none</tracking_level>
				</field>
				<field id="num_hdmi" xsi:type="AttributeInteger"> 
					<sql>num_hdmi</sql>
					<default_value>0</default_value>
					<is_null_allowed>true</is_null_allowed>
					<tracking_level>none</tracking_level>
				</field>
				<field id="num_displayport" xsi:type="AttributeInteger"> 
					<sql>num_displayport</sql>
					<default_value>0</default_value>
					<is_null_allowed>true</is_null_allowed>
					<tracking_level>none</tracking_level>
				</field>
			</fields>
